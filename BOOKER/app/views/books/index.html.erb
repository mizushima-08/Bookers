<p id="notice"></p>
<h1 class="heading">Books</h1>
<!-- ここに一覧と編集 -->
<table>
 <tr>
  <th>Title </th>
  <th >Body</th>
 </tr>
 
 <% @books.each do |f| %>
 <tr>
  <td><%= f.title %></td>
  <td><%= f.body %></td>
  <td><%= link_to "Show", book_path(f.id) %></td>
  <td><%= link_to "Edit", edit_book_path(f) %></td>
  <td><%= link_to "Destroy", book_path(f), method: :delete, "data-confirm" => "Are you sure?" %></td>
 </tr>
 <% end %>
</table> 
<p id="notice"></p>
<h2>New book</h2>
<!--エラー-->
<% if @book.errors.any? %>
  <div id="error_explanation">
   <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message%></li>
   <% end %>
   </ul>
  </div>    
  <%= form_with model: @book, local:true do |f| %>
   <div class="field">
    <div id="field_error">Title</div>
    <div id="field_error"><%= f.text_field:title %></div>
   </div>
   
   <div class="field">
    <div id="field_error">Body</div>
    <div id="field_error"><%= f.text_area:body %></div>
   </div> 
   <div class="action">
    <br><%= f.submit'Create Book' %></br>
   </div> 
  <% end %>
<!-- エラーメッセージ -->
 <% else %>
  <%= form_with model: @book, local:true do |f| %>
   <div class="field">
    <h4>Title</h4>
    <%= f.text_field:title %>
   </div>
   <div class="field">
    <h4>Body</h4>
    <%= f.text_area:body %>
   </div> 
   <div class="action">
    <br><%= f.submit'Create Book' %></br>
   </div> 
  <% end %>

<% end %>
